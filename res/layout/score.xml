<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <TextView  
		android:id="@+id/questions_asked"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dip"
	    android:text="Questions Asked: "
	    android:textColor="#FFFFFF"
	    android:textSize="20dip"
	    />
	   
	<TextView  
		android:id="@+id/questions_correct"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/questions_asked"
	    android:layout_marginTop="10dip"
	    android:text="Number Correct: "
	    android:textColor="#FFFFFF"
	    android:textSize="20dip"
	    /> 
    
	<ImageView
    	android:id="@+id/ackbar_image"
    	android:layout_width="120dip"
    	android:layout_height="180dip"
    	android:layout_centerHorizontal="true"
    	android:layout_below="@id/questions_correct"
    	android:layout_marginTop="20dip"
    	android:src="@drawable/ackbar"
    	/>
    	
   	<TextView  
		android:id="@+id/win_fail_message"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dip"
	    android:layout_below="@id/ackbar_image"
	    android:gravity="center"
	    android:text="Congratulations, you've won! (No, it's not a trap)"
	    android:textColor="#FFFFFF"
	    android:textSize="26dip"
	    />
    
	 <Button 
        android:id="@+id/play_button"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_alignParentBottom="true"
	    android:layout_margin="20dip"
	    android:text="Play Again"
	    /> 
	    
</RelativeLayout>

